{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"files": {
		"includes": ["app/**", "src/**"]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"assist": {
		"enabled": true
	}
}
